<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- group -->
        <record id="group_access_pos" model="res.groups">
            <field name="name">Access Pos</field>
        </record>
        <!-- Inheriting the existing POS Kanban View -->
        <record id="view_pos_config_kanban_inherit" model="ir.ui.view">
            <field name="name">pos.config.kanban.view.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
            <field name="arch" type="xml">
                <!-- Add group to the kanban-menu -->
                <xpath expr="//t[@t-name='kanban-menu']" position="attributes">
                    <attribute name="groups">automate_pos_order.group_access_pos</attribute>
                </xpath>
            </field>
        </record>

        <!-- Config Settings -->
        <record id="res_config_settings_view_form_pos_closing" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.pos.closing</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="balance_control"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="balance_control"/>
                            <div class="text-muted">
                                For Cash.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="for_atm"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="for_atm"/>
                            <div class="text-muted">
                                For ATM.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="for_others"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="for_others"/>
                            <div class="text-muted">
                                For Others.
                            </div>
                        </div>
                    </div>


                    <!--                    <div class="col-12 col-lg-6 o_setting_box" id="pos_closing_display_section">-->
