                    <!--                        <div class="o_setting_right_pane">-->
                    <!--                            <span class="o_form_label">Closing Display Controls</span>-->
                    <!--                            <div class="text-muted">-->
                    <!--                                Configure what information to show in closing popup-->
                    <!--                            </div>-->
                    <!--                            <div class="content-group mt16">-->
                    <!--                                <div class="row mt16">-->
                    <!--                                    <label for="balance_control" class="col-lg-4">Hide Session Balance Control-->
                    <!--                                    </label>-->
                    <!--                                    <field name="balance_control"/>-->
                    <!--                                </div>-->
                    <!--                            </div>-->
                    <!--                        </div>-->
                    <!--                    </div>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
