<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="update_pos_payment_wizard" model="ir.ui.view">
        <field name="name">update.pos.payment.wizard.form</field>
        <field name="model">update.pos.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Payment">
                    <field name="pos_payment_ids" nolable="1">
                        <form>
                            <field name="pos_payment_id"/>
                            <field name="amount"/>
                        </form>
                        <tree editable="bottom">
                            <field name="payment_method_id" />
                            <field name="amount"/>
                        </tree>
                    </field>
                <footer>
                    <button name="on_confirm" string="Update Payment" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

